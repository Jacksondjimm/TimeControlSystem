@page "{id:int}"
@model RazorPagesApp.Pages.EditModel

    <!DOCTYPE html>
    <html>
    <head>
        <meta charset='utf-8' />
        <title>Ваша фирма</title>
    </head>
    <body text="#E6E6FA" bgcolor="#000000">
        <div>@Model.Message</div>
            <form method="post">
                <input name="id" value="@Model.Person?.Id" type="hidden" />
                <p>
                    <label>Фамилия</label><br />
                    <input name="surname" value="@Model.Person?.Surname" />
                </p>
                <p>
                    <label>Имя</label><br />
                    <input name="name" value="@Model.Person?.Name" />
                </p>
                <p>
                    <label>Отчество</label><br />
                    <input name="name" value="@Model.Person?.Patronymic" />
                </p>
                <p>
                    <label>Почта</label><br />
                    <input name="email" value="@Model.Person?.Email" /> 
                </p>
                <p>
                    <label>Роль</label><br />
                    <input name="role" value="@Model.Person?.Role" /> 
                </p>
                <p>
                    <label>Пароль</label><br />
                    <input name="password" value="@Model.Person?.Password" /> 
                </p>
                <p>
                    <label>Номер карты</label><br />
                    <input name="num" value="@Model.Person?.Num" /> 
                </p>
                <input type="submit" value="Сохранить" />
            </form>
    </body>
    </html>
